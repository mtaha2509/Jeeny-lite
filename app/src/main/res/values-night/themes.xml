<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RideHailingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="StatusStep">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StepDivider">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_hint</item>
        <item name="android:layout_marginHorizontal">4dp</item>
    </style>


</resources>